generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id  String @id @default(uuid())
  name String?  
  email String @unique 
  access_token String
  refresh_token String
  expiry_date DateTime
  messages Message[]
}

